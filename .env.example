# --- Vault ---
VAULT_ADDR=http://127.0.0.1:8200
VAULT_TOKEN=<watcher-token-with-read-only-policy>

# --- Discord notifications ---
DISCORD_WEBHOOK=<your-discord-webhook-url>

# --- Email notifications ---
EMAIL_ENABLED=false
EMAIL_FROM=homelab@yourdomain.com
EMAIL_TO=you@yourdomain.com,alerts@yourdomain.com
EMAIL_SMTP_HOST=smtp.yourmailserver.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=homelab@yourdomain.com
EMAIL_PASSWORD=super-secret-password
EMAIL_STARTTLS=true

# --- Watcher runtime ---
LOG_STEPS=true
POLL_INTERVAL_SECONDS=20
DOCKER_READY_TIMEOUT=120
COMPOSE_TIMEOUT=300
DISCOVERY_DEPTH=2

# --- Git repo + paths ---
# Use SSH or HTTPS… SSH recommended for a private repo
REPO_URL=https://github.com/Dario-Maselli/homelab.git
BRANCH=main

# Worktree mode… your dev checkout stays untouched
SOURCE_REPO_PATH=D:/7-GitHubRepos/homelab
DEPLOY_PATH=C:/homelab-deploy
